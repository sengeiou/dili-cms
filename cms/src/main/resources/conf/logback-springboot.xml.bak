            </encoder>
        </appender>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="com.dili.${LOG_NAME}" level="INFO"/>
        <logger name="com.alibaba.nacos.client" level="WARN"/>
    </springProfile>

    <root level="info">
        <appender-ref ref="appender" />
        <appender-ref ref="FILE" />
    </root>
</configuration>