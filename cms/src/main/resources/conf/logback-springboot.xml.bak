            </encoder>
        </appender>
        <logger name="org.springframework.web" level="INFO"/>
        <logger name="com.dili.${LOG_NAME}" level="INFO"/>
        <logger name="com.alibaba.nacos.client" level="WARN"/>
        <jmxConfigurator/>
    </springProfile>
    <!-- 灰度环境 -->
    <springProfile name="pre">
